# ArqAI Website Environment Variables
# Copy this file to .env.local and fill in your values
# Run `npm run setup-env` to validate your configuration

# ===========================================
# REQUIRED FOR PRODUCTION
# ===========================================

# JWT Secret for admin authentication (REQUIRED in production)
# Generate with: openssl rand -base64 48
# Must be at least 32 characters
JWT_SECRET=your-secure-random-string-at-least-32-chars

# ===========================================
# AI API Keys (at least one required for chat)
# ===========================================

ANTHROPIC_API_KEY=sk-ant-api03-xxxxx
OPENAI_API_KEY=sk-xxxxx

# ===========================================
# Supabase (for lead tracking, CMS, analytics)
# ===========================================

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# Email (for contact forms)
# ===========================================

RESEND_API_KEY=re_xxxxx

# ===========================================
# Admin Credentials (optional - defaults to dev values)
# ===========================================

# Admin username (default: arqadmin)
# ADMIN_USERNAME=arqadmin

# Admin password hash - generate with: npx bcryptjs hash "your-password"
# Default dev password is "AdminDev2026!" - CHANGE IN PRODUCTION
# ADMIN_PASSWORD_HASH=$2a$12$xxxxx

# ===========================================
# Mailchimp (optional - for newsletter)
# ===========================================

MAILCHIMP_API_KEY=xxxxx-us1
MAILCHIMP_LIST_ID=xxxxx
