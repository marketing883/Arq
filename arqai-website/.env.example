# ArqAI Website Environment Variables
# Copy this file to .env.local and fill in your values

# AI API Keys (at least one required for chat to work)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx
OPENAI_API_KEY=sk-xxxxx

# Supabase (for lead tracking - optional)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Email (for contact forms - optional)
RESEND_API_KEY=re_xxxxx

# Admin Authentication
JWT_SECRET=your-secure-random-string-at-least-32-chars

# Mailchimp (optional)
MAILCHIMP_API_KEY=xxxxx-us1
MAILCHIMP_LIST_ID=xxxxx
